{
  "name": "sift-tldr",
  "display-name": "TL;DR",
  "description": "A simple Sift that tells you how long it will approximately take you to read your emails",
  "subtitle": "Spot long emails before you even open them",
  "author": "Christos Vontas",
  "version": "1.0.0",
  "icon": "assets/sift-icon.svg",
  "marketing": {
    "screenshots": [
      "assets/screenshot-1.png"
    ],
    "links": [
      {
        "label": "Github",
        "type": "github",
        "url": "https://github.com/redsift/sift-tldr"
      }
    ]
  },
  "interfaces": {
    "email": {
      "thread" : {
        "controller": "dist/js/controller.umd-es2015.js"
      },
      "client" : {
        "controller": "dist/js/email-client-controller.umd-es2015.js"
      }
    },
    "summary": {
      "controller": "dist/js/controller.umd-es2015.js"
    }
  },
  "dag": {
    "inputs":{
        "emails":{
          "gmailEmails":{
            "filter":{
              "conditions":[{
                "date": "between now and 1 month before now"
              }]
            },
            "wants": [
              "archive",
              "textBody",
              "strippedHtmlBody"
            ],
            "inMailbox": "Important"
          }
        },
        "webhooks":{
          "slider-wh": {
            "inbound": {
              "uri": "{key}/{value}"
            }
          }
        }
    },
    "nodes":[{
      "#": "First Node",
      "input": {
        "bucket": "gmailEmails"
      },
      "implementation": {
        "javascript": "server/node1.js"
      },
      "outputs": {
        "messageCounts": {}
      }
    },
    {
      "#": "Second Node",
      "input": {
        "bucket": "messageCounts",
        "select": "/*",
        "lookup": [{
          "bucket": "settings",
          "key": "wpm",
          "createDependency": true
        }]
      },
      "implementation": {
        "javascript": "server/node2.js"
      },
      "outputs": {
        "threads": {}
      }
    },
    {
      "#": "Settings",
      "implementation": {
        "javascript": "server/settings.js"
      },
      "input": {
        "bucket": "slider-wh"
      },
      "outputs": {
        "settings": {}
      }
    }
    ],
    "stores":{
      "messageCounts": {
        "key$schema": "string/string"
      },
      "settings": {
        "key$schema": "string"
      }
    },
    "outputs":{
      "exports":{
        "threads":{
          "import": "_email.tid"
        }
      }
    }
  }
}
