@import "@redsift/ui-rs-core/dist/css/ui-rs-core.min.css"
@import "@redsift/ui-rs-hero/dist/css/ui-rs-hero.min.css"

.-bg-tdlr
  background-image: url('https://static.redsift.io/assets/sifts/sift-tldr/hero.jpg')
  background-color: rgb(42, 24, 22)
  background-image: -webkit-image-set(
    url('https://static.redsift.io/assets/sifts/sift-tldr/hero.jpg') 1x,
    url('https://static.redsift.io/assets/sifts/sift-tldr/hero_2x.jpg') 2x
  )

.hero-sticky-header--active
  box-shadow: 0px 0px 2px 2px rgba(0, 0, 0, 0.15)
  background-image: url('https://static.redsift.io/assets/sifts/sift-tldr/hero.jpg')
  background-image: -webkit-image-set(
    url('https://static.redsift.io/assets/sifts/sift-tldr/hero.jpg') 1x,
    url('https://static.redsift.io/assets/sifts/sift-tldr/hero_2x.jpg') 2x
  )

body, html {
  height: 100%;
  overflow-x: hidden;
  background-color: #f7f7f7;
}

.content
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 1em;

.content > * 
  user-select: none;

.detail-content 
  height: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;


.detail-content > * 
  user-select: none;

.card
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  align-items: center;
  align-self: stretch;
  border: 1px solid #D7D6D6;
  margin-bottom: 1em;
  padding: 0.5em;
  
.card:last-child
  margin-bottom: 0;
  
.slider-box
  display: flex;
  align-items: center;
  
.legend
  height: 100%;
  display: flex;
  align-self: stretch;
  justify-content: space-around;
  padding: 2em;
  flex-wrap: wrap;
  
.legend__step
  display: flex;
  flex-direction: column;
  align-items: center;
  
.legend__step__icon
  margin-top: 1em;
  width: 30px;
  height: 30px;

@media (max-width: 230px)
  .content
    height: 100%
    box-sizing: border-box

  .hero
    display: none

  .hero-sticky-header
    display: none
  
  .card-slider
    display: none

  .legend
    padding: 0;

  .legend__step
    min-width: 50px;
    margin-bottom: 0.5em;

@media (max-height: 230px)
  body
    overflow-y: hidden
  